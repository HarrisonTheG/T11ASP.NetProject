@{
    var product = (ProductList)ViewData["product"];
}

@section scripts{
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <!-- Font Awesome Script for star rating-->
    <script src="https://use.fontawesome.com/c94815eee1.js"></script>
}
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

<link rel="stylesheet" href="/css/ProductDetail.css">


<h1>Product Reviews for @product.ProductName</h1>
<form enctype="multipart/form-data" asp-controller="Cart" asp-action="addToCart" method="POST">
    <div class="container bootdey">
        <div class="col-md-12">
            <section class="panel">
                <div class="panel-body">
                    <div class="col-md-3">
                        <div class="pro-img-details" style="height:250px;width:250px">
                            <input hidden name="productId" value="@product.ProductId" />
                            <img src="@product.ImgUrl" alt="">
                            <hr />
                        </div>
                    </div>
                    <div class="col-md-9">
                        <h3 class="pro-d-title">
                            <a href="#" class="">
                                @product.ProductName
                            </a>
                        </h3>

                        <h4>
                            @product.Description
                        </h4>

                    </div>

                    <div class="col-md-12">
                        <!-- Rating star 60%=3 star. 2.5 star= 50%-->
                        Your Rating: <div class="stars-outer stars-large">
                            <div class="stars-inner" style="width:@(((product.Rating)*20)+"%")"> </div>
                        </div>

                    </div>
                    <div class="col-md-12">
                        <textarea name="productcomment" style="resize:none;width:100%;height:150px"></textarea>
                        <p>
                            <button class="btn btn-round btn-primary" type="button" formaction="/"> Submit Review</button>
                        </p>
                    </div>

                </div>

            </section>
        </div>
    </div>
</form>