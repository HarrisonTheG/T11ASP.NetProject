@{
    ViewBag.Title = "Checkout";
    double subtotal = 0;
    double sum = 0;
    int count = 0;

    IEnumerable<CartDetails> shoppingcart = (IEnumerable<CartDetails>)ViewData["4"];
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<div id="dvContents">
    <table class="table table-hover" width="100%" height="100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Item</th>
                <th>Product</th>
                <th>Price</th>
                <th>Item In stock</th>
                <th>Quantity</th>
                <th>Item Total</th>
            </tr>
        </thead>
        <tbody>
            @if (shoppingcart == null)
            {
                <tr>
                    <td style="font-size:20px">There are no items in the cart </td>
                </tr>
            }
            else
            {
                @foreach (var item in shoppingcart)
                {
                    <tr>
                        <td>@{count++;}@count</td>
                        <td>
                            <img src="@item.ProductList.ImgUrl" style="overflow:hidden; position:relative;width:50px;height:50px" />
                        </td>
                        <td>@item.ProductList.ProductName</td>
                        <td>@item.ProductList.UnitPrice</td>
                        <td>@item.ProductList.MaxStock</td>
                        <td>
                            <div>
                                <form enctype="multipart/form-data" action="/cart/addtocart" method="POST">
                                    <div>
                                        <input type="hidden" name="quantity" value=1 />
                                        <input type="hidden" name="productId" value=@item.ProductId>
                                        <button type="submit" class="btn btn-success">Add</button>
                                    </div>
                                </form>
                                <input style="width:40px" asp-for="@item.Quantity" name="quantity" value="@item.Quantity" />

                                <form enctype="multipart/form-data" action="/cart/removeitemfromcart" method="POST">
                                    <div>
                                        <input type="hidden" name="cartId" value="@item.CartId" />
                                        <input type="hidden" name="quantity" value=1 />
                                        <input type="hidden" name="productId" value=@item.ProductId>
                                        <button type="submit" class="btn btn-success">Minus</button>
                                    </div>
                                </form>
                            </div>
                        </td>
                        <td>@{subtotal = item.Quantity * item.ProductList.UnitPrice;}@subtotal</td>
                        <td>
                            <form enctype="multipart/form-data" action="/cart/removeitemfromcart" method="POST">
                                <div>
                                    <input type="hidden" name="cartId" value="@item.CartId" />
                                    <input type="hidden" name="quantity" value=1 />
                                    <input type="hidden" name="productId" value=@item.ProductId>
                                    <button type="submit" class="btn btn-danger">Delete Item</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
        <tfoot>
            @if (shoppingcart != null)
            {
                @foreach (var item in shoppingcart)
                {
                    sum = item.Quantity * item.ProductList.UnitPrice + sum;
                }
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>Total</td>
                    <td><a asp-controller="">@sum</a></td>
                    <td></td>
                    <td></td>
                </tr>
            }
        </tfoot>
    </table>

    <div id="footer" width="100%" height="60px">
        <button type="button" id="btnprint" class="btn btn-primary">Print</button>
        <a asp-controller="Home" asp-action="index" class="btn btn-success">Continue Shopping</a>
        <button type="button" id="btnprint" class="btn btn-warning">Place Order</button>


    </div>

</div>